
<div class="gallery root-shadow-effect">

    <div class="carousel slide" id="myCarousel">
      <div class="carousel-inner">
        <div class="item active">
          <ul class="no-margin-or-bullet">
            <li class="slide_gallery">
            <%= image_tag(@rotating_gift_image_first.gift_images.last.image_url(:ex_large_pic)) %>
            <span class="gallery-slideshow-caption">
              <h3 class="gallery-slideshow-h3"><%= @rotating_gift_image_first.name %></h3>
              <p class="gallery-slideshow-p"><%= truncate(@rotating_gift_image_first.description, length: 150) %></p>
            </span>
            </li>
          </ul>
        </div>

        <% @rotating_gift_images.each do |fb| %>
        <div class="item">
          <ul class="no-margin-or-bullet">
            <li class="slide_gallery">
            <%= image_tag(fb.gift_images.last.image_url(:ex_large_pic))%>
            <span class="gallery-slideshow-caption">
              <h3 class="gallery-slideshow-h3"><%= fb.name %></h3>
              <p class="gallery-slideshow-p"><%= truncate(fb.description, length: 150) %></p>
            </span>
            </li>
          </ul>
        </div>
        <% end %>

      </div>
        <a data-slide="prev" href="#myCarousel" class="left carousel-control">‹</a>
        <a data-slide="next" href="#myCarousel" class="right carousel-control">›</a>
    </div>

  <script>
    $('#myCarousel').carousel();
  </script>
  

</div>

<br>




