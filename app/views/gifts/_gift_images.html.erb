<div id="gallery" class="content">
  <div class="slideshow-container">
    <div id="loading" class="loader"></div>
    <div id="slideshow" class="slideshow"></div>
  </div>
</div>

<div id ="thumbs" class="navigation">          
  <ul class="thumbs noscript no-margin-or-bullet">
    <li>
      <a class="thumb" name="optionalCustomIdentifier" href="<%= @gift.gift_image.image_url(:large_pic) %>" title="<%= @gift.name %>">
        <%= image_tag(@gift.gift_image.image_url(:sm_thumb_pic)) if @gift.gift_image.image? %>
      </a>
    </li>
    <li>
      <a class="thumb" name="optionalCustomIdentifier" href="<%= @gift.gift_image.image2_url(:large_pic) %>" title="<%= @gift.name %>">
        <%= image_tag(@gift.gift_image.image2_url(:sm_thumb_pic)) if @gift.gift_image.image2?%>
      </a>
    </li>
    <li>
      <a class="thumb" name="optionalCustomIdentifier" href="<%= @gift.gift_image.image3_url(:large_pic) %>" title="<%= @gift.name %>">
        <%= image_tag(@gift.gift_image.image3_url(:sm_thumb_pic)) if @gift.gift_image.image3?%> 
      </a>
    </li>
    <li>
      <a class="thumb" name="optionalCustomIdentifier" href="<%= @gift.gift_image.image4_url(:large_pic) %>" title="<%= @gift.name %>">
        <%= image_tag(@gift.gift_image.image4_url(:sm_thumb_pic)) if @gift.gift_image.image4? %>
      </a>
    </li>
  </ul>
</div>        
