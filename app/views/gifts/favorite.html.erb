<% content_for :head do %>
  <meta property="og:site_name" content="www.bubboli.com" />
  <meta property="og:title" content="Bubboli Favorites" />
  <meta property="og:url" content="www.bubboli.com/gift/favorite" />
  <meta property="og:type" content="website" />
  <meta property="og:description" content="A collection of our favorite gifts / toys for the kids in your life for their birthday,
  holiday or just because."/>
<% end %>

<% @page_title = "Bubboli's favorite gifts" %>
<div class="container">
  
  <a name="gifts"></a>
  <div class="row will-paginate">
      <%= page_navigation_links @gifts, 'gifts' %>  
  </div>
  
  <div class="row">
    
    <div class="span2 form-stacked toy-search">
      <p class="mynewfont">Search Criterias</p>
      <%= simple_form_for @search_favorite, :url => favorite_gift_path do |f| %>
        <%= render(:partial => "gift_search", :locals => {:f => f})%>
      <% end %>
      
    </div>
    
    <div class="row">
      <div class="span8  extra-padding">
        <ul class="prod">
          <% if @gifts.empty? %>
            <p class="no-gifts">There are no gifts that match your criteria.</p>
          <% else %>
            <% @gifts.each do |gift| %>
              <%= render(:partial => "gift_list", :locals => {:gift => gift})%>
            <% end %>
          <% end %>        
        </ul>
      </div>
    </div> 
    
    <div class="row will-paginate pull-right">
        <%= page_navigation_links @gifts, 'gifts' %>  
    </div>
  </div>
</div>