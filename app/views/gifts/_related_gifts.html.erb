<% unless @similar_gifts.blank? %>
  <h4 class="qikki-font" style="color: #53868B">Other Gifts You May Like</h4>
    <ul class="no-margin-or-bullet">
    <% @similar_gifts.each do |gift| %>
      <li class="related-gifts">
        <%= link_to image_tag(gift.gift_images.last.image_url(:sm_thumb_pic)), gift_path(gift) %><br>
        <%= link_to gift.name, gift_path(gift) %>
      </li>
    <% end %>
  </ul>
<% end %>

