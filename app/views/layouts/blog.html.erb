<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title || 'Bubboli' %></title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
<% # Adding google analytics below %>  
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-30251348-1']);
    _gaq.push(['_setDomainName', 'bubboli.com']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
    
</head>
<body>
  
<%= render partial: "layouts/header" %>     
      
        <div class="container">
          <hr class="subnav-top">

          <ul class="sub-nav pull-left">    
            <li><%= link_to "NEWEST", '#' %></li>
            <li><%= link_to "BUBBOLI FAVORITES", '#' %></li>
            <li><%= link_to "BABY SHOWERS", '#' %></li>
          </ul>
          
          <%= render partial: "layouts/subnav" %>
          
          <hr class="subnav-bottom">

        </div>
    </div>
    


    <%= yield %>

    <div class="push"></div>
    
  </div>  
</body>

<div>
  <footer>
    <br>
    <%= render partial: "layouts/footer" %>
  </footer>
</div>

</html>