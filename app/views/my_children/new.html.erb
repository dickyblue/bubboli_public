<div class="container">

  <p style="text-align: center">Create a child so family and friends can search for your child and follow them.</p>
  <div class="new-child-well ">
  
    <%= simple_form_for(@my_child, :url => { :action => "create" }, :html => {:class => "form-horizontal"}) do |f| %>
      <%= f.input :first_name, :label => 'First Name' %>
      <%= f.input :birth_date, :as => :date, :order => [:month, :day, :year], :start_year => 2000, :end_year => Time.now.year, :input_html => {:class => "input-small"}, :label => "Birth Date" %>
      <%= f.input :gender, :as => :select, :collection => ['Male', 'Female'] %>
      <div id="other_parent">
        <%= f.simple_fields_for :invitations do |ff| %>  
          <%= ff.input :recipient_email, :label => 'Spouse Email' %>
        <% end %>
      </div>
      
      <div class="pull-right">  
      <%= f.button :submit, :class => "primary" %>
      </div>
    
    <% end %>

  
  </div>
  
</div>