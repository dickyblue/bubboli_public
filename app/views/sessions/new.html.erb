<div class="container">

  <%= simple_form_for(:session, :url => sessions_path) do |f| %>
      <div class="row">
        <div class="span4 offset4 well blog-back-home">
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.button :submit, 'Login', :class => "primary" %> &nbsp;&nbsp;&nbsp;&nbsp; <%= link_to "Forgot password?", new_password_reset_path %>
        </div>
      </div>
  <% end %>
  <div class="register_link">Don't Have An Account? &nbsp; <%= link_to "Sign Up For Free.", new_user_path %></div>
</div>
