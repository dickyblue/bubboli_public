<i class="icon-user"></i> <span class="red-link"><%= link_to "Back To My Profile", user_path(current_user)%></span><br><br>


<div class="op3-title op3-stitched-shadow">
  PENDING REQUESTS
</div>

<div class="test-stitch"><br></div>

  <div class="row">
    <ul class="child-list">
      <% @pending.each do |r| %>
      <li class="children-following child-list block">
        <% if r.child.child_images.empty? %>
          <%= image_tag('profile_pic_default.jpg') %>
        <% else %>
          <%= image_tag(r.child.child_images.first.image_url(:sm_thumb)) if r.child.try(:child_images).try(:first) %>
        <% end %>
        <strong style="color: #53868B;"><%= r.child.try(:first_name) %></strong><br>
        <span class="font-next-to-images">
          Relation: <%= r.relation_type.name if r.relation_type %><br>
          Requested: <%= r.created_at.strftime("%m/%d/%y") %>
          <%= link_to "Unfollow", r, :method => :delete, :data => {:confirm => "Are you sure you want to cancel your friend request?"}, :remote => "true", :class => "unfollow btn btn-mini btn-warning btn-spacing" %>
        </span>    
      </li>  
      <% end %>
    </ul>
  </div>

