<div class="op3-title op3-stitched-shadow">
  UPCOMING BIRTHDAYS
</div>

<div class="test-stitch"><br></div>

  <br>
  <br>

  <div class="row">
    <ul class="child-list">
      <% @relationships_by_birth_date.each do |r| %>    
        <% if (0..31).include?(r.child.birthday_days)%>      
        <li class="children-following child-list block">
          <%= render(:partial => 'child_list', :locals => {:r => r})%>
          <span style="color: #999999; font-size: 12px">Birthday: <%= r.child.birth_date.strftime("%b. %d")%></span>
          <%= form_for(r, :html => {:method => :delete }, remote: true) do |f| %>
            <%= f.submit "Unfollow", class: "btn-mini btn-info btn-spacing" %>
          <% end %>
        <% else %>
        You don't have any upcoming birthdays.
        <% end %>
      <% end %>

    </ul>
  </div>

<br>

<div class="op3-title op3-stitched-shadow">
  MY CHILDREN
</div>

<div class="test-stitch"><br></div>  
  <span class="pull-right red-link"><i class="icon-plus"></i> <%= link_to "Add My Child", new_my_child_path %></span>

  <br>
  <br>

  <div class="row">
    <ul class="child-list">
      <% @relationship_my_kids.each do |r| %>
      <li class="children-following child-list block">
        <%= render(:partial => 'child_list', :locals => {:r => r})%>
      </li>  
      <% end %>
    </ul>
  </div>

<br>


<div class="op3-title op3-stitched-shadow">
  CHILDREN I AM FOLLOWING
</div>

<div class="test-stitch"><br></div>  
  <span class="pull-right red-link"><i class="icon-plus"></i> <%= link_to "Add A New Child", search_child_path %></span>

  <br>
  <br>


    <div class="row">
      <ul class="child-list">
        <% @relationships_by_name.each do |r| %>
        <li class="children-following child-list block">
          <%= render(:partial => 'child_list', :locals => {:r => r})%>
          <span style="color: #999999; font-size: 12px">Relations: <%= r.relation_type.name if r.relation_type %></span><br>
          <%= link_to "Unfollow", r, :method => :delete, :remote => "true", :class => "unfollow" %>
        </li>  
        <% end %>
      </ul>
    </div>



