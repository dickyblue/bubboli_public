<%= simple_form_for @user, :url => change_password_path, :method => :post do |f| %>
  <%= label_tag :old_password %>
  <%= password_field_tag :old_password, nil %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <div class="actions"><%= f.button :submit, "Change Password", :class => "primary"%></div>
<% end %>