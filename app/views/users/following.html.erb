<i class="icon-user"></i> <span class="red-link"><%= link_to "Back To My Profile", user_path(current_user)%></span><br><br>


<div class="op3-title op3-stitched-shadow">
  KIDS I AM FOLLOWING
</div>

<div class="test-stitch"><br></div>


<div class="row">
  <ul class="child-list">
    <% @following.each do |r| %>
    <li class="children-following child-list block">
      <%= render(:partial => "relationship", :locals => {:r => r}) %>
      <%= link_to "Unfollow", r, :method => :delete, :data => {:confirm => "Are you sure you want to unfollow this child?"}, :remote => "true", :class => "unfollow btn btn-mini btn-warning btn-spacing" %>
    </li>  
    <% end %>
  </ul>
</div>