<div class="span8">
  
  <%= simple_form_for @relationship do |f| %>
  
    <%= simple_fields_for :child do |ff| %>
    
      <%= ff.input :first_name, :label => 'First Name' %>
      <%= ff.input :birth_date, :as => :date, :order => [:month, :day, :year], :start_year => 2000, :end_year => Time.now.year, :input_html => {:class => "input-small"}, :label => "Birth Date" %>
      <%= ff.input :gender, :as => :select, :collection => ['Male', 'Female'] %>
    <% end %>
    
    <%= f.association :relation_type, :as => :collection_select %>
    
    <%= f.button :submit, :class => "primary" %>
    
  <% end %>
  
</div>