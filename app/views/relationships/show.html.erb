<script type="text/javascript">
$(':checkbox').change(function(e){
   if ($(':checkbox:checked').length > 1) {
     $(this).prop('checked', false)
   }
})
</script>

<div class="container">
<%= link_to "<<< Back To My Profile", user_path(current_user)%><br><br>
  <div class="row">

    <div class="span3" > 
      <div class="profile-well">
        <%= @child.first_name %><br>
        <%= @child.id %>
      </div>
  
      <div>      
        Location: <%= @child.child_city%>, <%= @child.child_state%><br>
        Mother: <%= @child.child_mother%><br>
        Father: <%= @child.child_father%>
      </div>  
    
      <br>
      
      <div>
      <span style="font-size: 16px; color: #FF6F6A">Gift Options <%= @child.first_name %></span>
        <%= simple_form_for(@relationship, :html => {:class => "form-inline"}) do |f| %>
          <%= f.association :relation_type, :as => :collection_select, :label => "Relation To Child"  %><br>
          <%= f.association :gift_categories, :as => :check_boxes, :item_wrapper_class => "inline" %><br>
          <%= f.association :gift_price_ranges, :as => :check_boxes, :item_wrapper_class => "inline" %><br>
          <div class="pull-left"><%= f.button :submit, :class => "primary" %></div>
        <% end %>
      </div>
    
    </div>


    <div class="span9">

      <span style="font-size: 16px; color: #FF6F6A">Recommended Gifts for <%= @child.first_name %></span>
      <hr/>

        <div class="row">

            <ul class="no-margin-or-bullet">
            <% @gifts_by_user_pref.each do |gift| %>
              <li class="related-gifts">
                <%= link_to image_tag(gift.gift_images.first.image_url(:sm_thumb_pic)), gift_path(gift) %></br>
                <%= link_to gift.name, gift_path(gift) %>
              </li>
            <% end %>
          </ul>

        </div>

    </div>

  </div>

</div>