<script type="text/javascript">
$(':checkbox').change(function(e){
   if ($(':checkbox:checked').length > 1) {
     $(this).prop('checked', false)
   }
})
</script>

<div class="container">
<%= link_to "<<< Back To My Profile", user_path(current_user)%><br><br>
  <div class="row">

    <div class="span3" > 
      <div class="profile-well">
        <%= @child.first_name %>
      </div>
  
      <div>      
        Location: <%= @relationship.child_city(@child )%>, <%= @relationship.child_state(@child )%><br>
        Relationship: <%= @relation %><br>
        Mother: <%= @relationship.child_mother(@child )%><br>
        Father: <%= @relationship.child_father(@child )%>
      </div>  
    
      <div class="btn-group square space-break">
        <button class="btn"><span style="font-size: 25px; font-weight: bold; color: #53868B"><%= kids_followings.count %></span></br><span style="color: #999999">Following</span></button>
        <button class="btn"><span style="font-size: 25px; font-weight: bold; color: #53868B"><%= kids_followings.count %></span></br><span style="color: #999999">Followers</span></button>
        <button class="btn"><span style="font-size: 25px; font-weight: bold; color: #FF9B97"><%= kids_followings.count %></span></br><span style="color: #999999">Pending</span></button>
      </div>

    </div>


    <div class="span9">

      <span style="font-size: 16px; color: #FF6F6A">User Child Options</span>
      <hr/>

        <div class="row">
          <%= simple_form_for(@relationship, :html => {:class => "form-horizontal form-inline"}) do |f| %>
            <%= f.association :relation_type, :as => :collection_select %>
            <%= f.association :gift_categories, :as => :check_boxes, :item_wrapper_class => "inline" %>
            <div class="pull-right"><%= f.button :submit, :class => "primary" %></div>
          <% end %>
              
        </div>
        
        <%= @categories  %>
        <%= @gifts.map {|p| p.gift.name } %>
        <%= @gift_by_gender %>
        <%= @child.gender %><br>
        <%= @relationship.gift_by_gender(@child)%><br>
        By Gender: <%= @gift %><br>
        By Age: <%= @age %><br>
        Result <%= @result%><br>
        
        
      </br>
      </br>
      </br>
      </br>

      <span style="font-size: 16px; color: #FF6F6A">Recommended Gifts For <%= @child.first_name %></span>
      <hr/>

        <div class="row">
          
        </div>

    </div>

  </div>

</div>