<div class="span2">
  <ul class="no-margin-or-bullet">
    <h3 class="mynewfont" style="color: #909090"><li><%= blog.publish_date.strftime("%b %e") %></li></h3>
    <li style="font-size: 11px">By: <%= blog.author %></li>
  </ul>
</div>

<div class="span7">
  <ul class="no-margin-or-bullet">
    <li class="qikki-font" style="font-size: 18px"><%= link_to blog.title, blog %></li>
    <li style="font-size: 11px">Posted in <%= blog.blog_categories.collect {|cat| cat.name }.join(", ") %> | <%= link_to(pluralize(blog.comments.size, 'comment'), :action => 'show', :id => blog.id, :anchor => 'comments') %></li><br>
  </ul>
    
  
  <div class="row">
    <div class="span2"><%= image_tag(blog.blog_image.image_url(:thumb_pic).to_s) if blog.blog_image.image? %></div>
      
    <div class="span5"><%= simple_format(truncate(blog.content, :length => 280, :separator => " ")) %></div>
  </div>
  
  <br>
  <span class="span7 dotted-hor-line no-margin-or-bullet"><%= separator %></span>
  <br>
  
</div>


